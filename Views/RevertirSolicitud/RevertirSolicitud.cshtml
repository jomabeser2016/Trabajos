@model RecursosHumanos.Models.RevertirSolicitud
@{
    ViewBag.Title = "RevertirSolicitud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JavaScript{
    <script type="text/javascript">
        var requrlPeriodo = '@Url.Action("DevolverDatosFiltroPeriodoGeneracion", "RevertirSolicitud", null, Request.Url.Scheme)';
        var requrlDatosPeriodo = '@Url.Action("DevolverDatosFiltroPeriodoSolicitud", "RevertirSolicitud", null, Request.Url.Scheme)';
        var requrlMostrarSolicitud = '@Url.Action("DevolverDetalleSolicitudDescansoFisico", "RevertirSolicitud", null, Request.Url.Scheme)';
        var requrlMostrarTrabajador = '@Url.Action("DevolverDatosFiltroTrabajador", "RevertirSolicitud", null, Request.Url.Scheme)';
        var requrlDatos = '@Url.Action("ActualizarDetalleDescansoFisico", "RevertirSolicitud", null, Request.Url.Scheme)';
    </script>

    <script type="text/javascript" src="@Url.Content("~/Scripts/view/RevertirSolicitud.js")"></script>
}
<section class="content-header">
    <h1><em>Reprogramar Vacaciones</em></h1>
    <ol class="breadcrumb">
        @Html.MvcSiteMap().SiteMapPath()
    </ol>
</section>
<section class="content">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmRevertirSolicitud" }))
    {
        <input type="hidden" value=@ViewBag.codDep id="hdCodDep" />
        <input type="hidden" value=@ViewBag.codNiv id="hdCodNiv" />
        <input type="hidden" value=@ViewBag.codEmp id="hdCodEmp" />

        @*<input id="hdToken" type="hidden" value="@ViewBag.AntiForgeryToken" name="__RequestVerificationToken" />*@
        <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Filtro Trabajador</h3>
                        <div class="box-tools">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="box-body with-border">
                        <div class="form-horizontal">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-1">
                                        @Html.LabelFor(x => x.slDependencia)
                                    </div>
                                    <div class="col-md-11">
                                        @Html.DropDownListFor(x => x.slDependencia, Model.slDependencia, new { @class = "form-control", id = "slDependencia" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <div class="col-md-4">
                                            @Html.LabelFor(x => x.slPlanilla)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(x => x.slPlanilla, Model.slPlanilla, new { @class = "form-control", id = "slPlanilla" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="col-md-4">
                                            @Html.LabelFor(x => x.slCargo)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(x => x.slCargo, Model.slCargo, new { @class = "form-control", id = "slCargo" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="col-md-4">
                                            @Html.LabelFor(x => x.slPeriodo)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(x => x.slPeriodo, Model.slPeriodo, new { @class = "form-control", id = "slPeriodo" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="col-md-4">
                                            @Html.LabelFor(x => x.slMes)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(x => x.slMes, Model.slMes, new { @class = "form-control", id = "slMes" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-1">
                                        @Html.LabelFor(x => x.slTrabajador)
                                    </div>
                                    <div class="col-md-11">
                                        @Html.DropDownListFor(x => x.slTrabajador, Model.slTrabajador, new { @class = "form-control select2", id = "slTrabajador", style = "width: 100%;" })

                                    </div>
                                    @*</div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer with-border">
                        <a href="#" id="btnBuscar" class="btn btn-primary pull-right">Buscar</a>
                    </div>
                </div>
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div class="mailbox-controls">
                            <!-- Check all button -->
                            <div class="btn-group">
                                <a href="#" id="btnGuardar" class="btn btn-default"><i class="fa fa-floppy-o"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="box-body table-responsive">
                        <table id="grdSolicitud"></table>
                        <div id="pageSolicitud"></div>
                    </div>
                </div>    
    }
</section>
