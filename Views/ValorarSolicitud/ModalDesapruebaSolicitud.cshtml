@using Forloop.HtmlHelpers
@model RecursosHumanos.Models.ModalDesapruebaSolicitud

<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Datos de la Solicitud</h4>
        </div>
        <!-- /.modal-header -->
        <div class="modal-body">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="form-group form-group-sm">
                        <div class="col-md-5">
                            <div class="col-md-3">
                                @Html.LabelFor(x => x.sCodTrabajador, new { @class = "control-label" })
                            </div>
                            <div class="col-md-7">
                                <label class="control-label small">@Model.sCodTrabajador</label>
                                @Html.HiddenFor(x => x.sCodPlanilla)
                                @Html.HiddenFor(x => x.sCodTrabajador)
                                @Html.HiddenFor(x => x.sPeriodo)
                                @Html.HiddenFor(x => x.sSecuencia)
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="col-md-3">
                                @Html.LabelFor(x => x.sTrabajador, new { @class = "control-label" })
                            </div>
                            <div class="col-md-9">
                                <label class="control-label small">@Model.sTrabajador</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <div class="col-md-5">
                            <div class="col-md-8">
                                @Html.LabelFor(x => x.sPeriodo, new { @class = "control-label" })
                            </div>
                            <div class="col-md-3">
                                <label class="control-label small">@Model.sPeriodo</label>
                            </div>
                        </div>                        
                        <div class="col-md-7">
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.sDias, new { @class = "control-label" })
                            </div>
                            <div class="col-md-6">
                                <label class="control-label small">@Model.sDias</label>
                            </div>
                        </div>                                                
                    </div>
                    <div class="form-group form-group-sm">
                        <div class="col-md-5">
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.sFehIni, new { @class = "control-label" })
                            </div>
                            <div class="col-md-6">
                                <label class="control-label small">@Model.sFehIni</label>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.sFehFin, new { @class = "control-label" })
                            </div>
                            <div class="col-md-6">
                                <label class="control-label small">@Model.sFehFin</label>
                            </div>
                        </div>
                        
                    </div>
                    <div class="form-group form-group-sm">
                        @Html.LabelFor(x => x.sMotivo, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.sMotivo, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            
        </div>
        <!-- /.modal-body -->
        <div class="modal-footer">
            <button id="btnCerrar" type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
            <a href="#" id="btnAceptar" type="button" class="btn btn-primary">Aceptar</a>
        </div>

    </div>
    <!-- /.modal-content -->
</div>

@using (var context = Html.BeginScriptContext())
{
    context.AddScriptFile("~/Scripts/view/Pruebas.js", true);
}
