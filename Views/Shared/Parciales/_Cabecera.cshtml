@model RecursosHumanos.Models.Usuario
@using RecursosHumanos.Helpers
<!-- *************INICIO CABECERA************* -->
<header class="main-header">

    <!-- Logo -->
    <a href="@Url.Action("Index","Home")" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>SAF</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>SAF</b></span>
    </a>

    <!-- Header Navbar -->
    <nav class="navbar navbar-fixed-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Seccion agregada para poder controlar cuando visualizar o no la información del usuario y PC en la cabecera -->
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-1">
            <span style="color:white;" class="fa fa-bars"></span>
        </button>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu collapse navbar-collapse" id="navbar-1">
            <ul class="nav navbar-nav">

                <li class="">
                    <a class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-desktop"></i>                        
                        @*<span>P7A-DDM15</span>*@
                        <span>@Model.Terminal.ToString()</span>
                    </a>
                </li>

                <li class="">
                    <a class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-building-o"></i>
                        <span>Sede Principal</span>
                    </a>
                </li>

                <li>
                    <a class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-calendar"></i>
                        <span id="liveclock"></span>
                    </a>
                </li>

                <!-- User Account Menu -->
                <li class="dropdown user user-menu">
                    <!-- Menu Toggle Button -->
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <!-- The user image in the navbar-->
                        <img src="@Url.Content("~/dist/img/U_profile.jpg")" class="user-image" alt="User Image" />
                        <!-- hidden-xs hides the username on small devices so only the image appears. -->
                        @*@Html.UsuarioImagen()*@
                        @Html.UsuarioTop()
                    </a>
                    <ul class="dropdown-menu">
                        <!-- The user image in the menu -->
                        <li class="user-header">
                            <img src="@Url.Content("~/dist/img/U_profile.jpg")" class="img-circle" alt="User Image" />
                            @Html.UsuarioDropDown()
                        </li>

                        <!-- Menu Body -->
                        <!--
                        <li class="user-body">
                        <div class="col-xs-4 text-center">
                            <a href="#">Followers</a>
                        </div>
                        <div class="col-xs-4 text-center">
                            <a href="#">Sales</a>
                        </div>
                        <div class="col-xs-4 text-center">
                            <a href="#">Friends</a>
                        </div>
                        </li>
                        -->
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            @*<div class="pull-left">
                                <a href="#" class="btn btn-default btn-flat">Perfil</a>
                            </div>*@
                            <div style="justify-content:center;align-items:center;display:flex;">
                                <a href="@Url.Action("Logout", "Home")" class="btn btn-default btn-flat">Cerrar Sesión</a>
                            </div>
                        </li>
                    </ul>
                </li>
                <!-- Control Sidebar Toggle Button -->
                @*<li>
                    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                </li>*@
            </ul>
        </div>
    </nav>
</header>
<!-- *************FIN CABECERA************* -->

